<h1>Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= task.title %> - <%= task.description %>
      <%= link_to 'Edit', edit_task_path(task) %> |
      <%= link_to "Destroy", task_path(task), data: {
          turbo_method: :delete,
          turbo_confirm: "Are you sure?"
        } 
      %>
      
    </li>
  <% end %>
</ul>
